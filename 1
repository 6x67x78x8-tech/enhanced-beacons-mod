package com.yourname.enhancedbeacons;

import net.fabricmc.api.ModInitializer;
import net.fabricmc.fabric.api.event.lifecycle.v1.ServerLifecycleEvents;
import net.minecraft.server.MinecraftServer;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

public class EnhancedBeaconsMain implements ModInitializer {
    public static final String MOD_ID = "enhancedbeacons";
    public static final Logger LOGGER = LoggerFactory.getLogger(MOD_ID);

    @Override
    public void onInitialize() {
        LOGGER.info("Enhanced Beacons mod loaded!");
        EnhancedBeaconsConfig.init();
        ServerLifecycleEvents.SERVER_STARTING.register(this::onServerStarting);
    }
    
    private void onServerStarting(MinecraftServer server) {
        LOGGER.info("Enhanced Beacons: Server starting, config loaded");
    }
}
